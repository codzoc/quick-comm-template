rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    // Storage rules can access email via request.auth.token.email
    function isAdmin() {
      // Must be authenticated
      return request.auth != null 
        // Must have email in token
        && request.auth.token.email != null
        // Check if admin document exists in Firestore
        && firestore.exists(/databases/(default)/documents/admins/$(request.auth.token.email))
        // Verify role is 'admin'
        && firestore.get(/databases/(default)/documents/admins/$(request.auth.token.email)).data.get('role', '') == 'admin';
    }

    // Products folder - only admins can upload/delete, everyone can read
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Logos folder - only admins can upload/delete, everyone can read
    match /logos/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Static pages folder - only admins can upload/delete, everyone can read
    match /static-pages/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

